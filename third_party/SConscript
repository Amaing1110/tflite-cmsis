from building import *
import rtconfig
import os
import platform

src = []
inc = []
cwd = GetCurrentDir() # get current dir path

# check if .h or .hpp files exsit
def check_h_hpp_exsit(path):
    file_dirs = os.listdir(path)
    for file_dir in file_dirs:
        if os.path.splitext(file_dir)[1] in ['.h', '.hpp']:
            return True
    return False

for root, dirs, files in os.walk(cwd):
    for dir in dirs:
        current_path = os.path.join(root, dir)

        #Use relative path for C source code, so .o will generated in build subfolder
        current_path2 = current_path.replace(cwd, '')
        current_path2 = current_path2[1:]
        src = src + Glob(os.path.join(current_path2,'*.cc')) # add all .c files

inc+=[cwd+'cmsis/CMSIS/Core']
inc+=[cwd+'/cmsis_nn']
inc+=[cwd+'/flatbuffers/include']
inc+=[cwd+'/gemmlowp']
inc+=[cwd+'/kissfft']
inc+=[cwd+'/ruy']
        
group = DefineGroup('TFLM-THIRD', src, depend = [], CPPPATH = inc)
Return('group')

